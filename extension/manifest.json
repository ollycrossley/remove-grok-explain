{
  "manifest_version": 3,
  "name": "Grok Explain This Remover",
  "description": "Removes the Grok Explain This button from X",
  "version": "1.0",
  "icons": {
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/content.js"
      ],
      "matches": [
        "https://x.com/*", "https://www.x.com/*", "https://www.twitter.com/*", "https://twitter.com/*"
      ],
      "run_at": "document_end"
    }
  ]
}